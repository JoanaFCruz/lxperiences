<%= simple_form_for(@experience) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <div class="row">
      <div class="col-md-6">

          <%= f.input :location, class: "mapboxgl-ctrl-geocoder--input",
            input_html: {data: {location_autocomplete_target: "location"}, class: "d-none"},
            wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
          %>

      </div>

      <div class="col-md-6">
        <%= f.input :price %>
      </div>
    </div>
    <%= f.input :photo, as: :file %>
  </div>
  <br>
  <div class="row">
    <div class="col-6">
      <%= link_to "Back to experiences", experiences_path, class:"btn btn-back" %>
    </div>
    <div class="col-6 text-end">
      <%= f.button :submit, class:"btn-submit" %>
    </div>
  </div>
<% end %>
