<div class='page-top-margin'>
  <h1>Our offers</h1>



  <div class="card-product">
    <%  @experiences.each do |experience|%>
      <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-product-infos">
        <h2><strong><%= link_to experience.title, experience_path(experience) %></strong></h2>
        <p><%= experience.location %></p>
        <p><%= experience.price %> eur</p>
      </div>
     <% end %>
  </div>


  <div>
    <%= link_to "Add new experience", new_experience_path if policy(Experience).new? %>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
